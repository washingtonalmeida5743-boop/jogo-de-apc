int main() {
    char nomes[100];
    int y = 0, nome_valido = 0; 

        do {
            menu1(nomes);
            tamanhodapalavra(&y, nomes, &nome_valido);
                if (nome_valido == 0) {

                    erro_palavra();
                }

        } while (nome_valido == 0);
    
    chamafuncoesprincipais(nomes);

    terminarjogo();
    return 0;
}
